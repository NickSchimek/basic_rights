<p id="notice"><%= notice %></p>

<h1>Fulfillments</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Received</th>
      <th>Active</th>
      <th>Need</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fulfillments.each do |fulfillment| %>
      <tr>
        <td><%= fulfillment.quantity %></td>
        <td><%= fulfillment.received %></td>
        <td><%= fulfillment.active %></td>
        <td><%= fulfillment.need %></td>
        <td><%= fulfillment.organization_id %></td>
        <td><%= link_to 'Show', fulfillment %></td>
        <td><%= link_to 'Edit', edit_fulfillment_path(fulfillment) %></td>
        <td><%= link_to 'Destroy', fulfillment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fulfillment', new_fulfillment_path %>
