<p id="notice"><%= notice %></p>

<h1>Needs</h1>

<% @organizations.each do |organization| %>
<h2><%= organization.name %></h2>

  <table>
    <thead>
      <tr>
        <th>Resource</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% organization.needs.each do |need| %>
        <tr>
          <td><%= need.resource %></td>
          <td><%= need.description %></td>
          <td><%= need.quantity %></td>
          <td><%= need.active %></td>
          <td><%= link_to 'Show', organization_need_path(need.organization, need) %></td>
          <td><%= link_to 'Edit', edit_organization_need_path(need.organization, need) %></td>
          <td><%= link_to 'Destroy', [need.organization, need], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

