<p id="notice"><%= notice %></p>

<h1>Surplus</h1>

<% @organizations.each do |organization| %>
<h2><%= organization.name %></h2>

  <table>
    <thead>
      <tr>
        <th>Resource</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% organization.surplus.each do |surplus| %>
        <tr>
          <td><%= surplus.resource %></td>
          <td><%= surplus.description %></td>
          <td><%= surplus.quantity %></td>
          <td><%= surplus.active %></td>
          <td><%= link_to 'Show', organization_surplu_path(surplus.organization, surplus) %></td>
          <td><%= link_to 'Edit', edit_organization_surplu_path(surplus.organization, surplus) %></td>
          <td><%= link_to 'Destroy', [surplus.organization, surplus], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
  <br>
