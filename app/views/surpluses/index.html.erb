<p id="notice"><%= notice %></p>

<h1>Surpluses</h1>

<table>
  <thead>
    <tr>
      <th>Resource</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surpluses.each do |surpluse| %>
      <tr>
        <td><%= surpluse.resource %></td>
        <td><%= surpluse.description %></td>
        <td><%= surpluse.quantity %></td>
        <td><%= surpluse.active %></td>
        <td><%= link_to 'Show', surpluse %></td>
        <td><%= link_to 'Edit', edit_surpluse_path(surpluse) %></td>
        <td><%= link_to 'Destroy', surpluse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

