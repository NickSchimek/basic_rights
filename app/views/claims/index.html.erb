<p id="notice"><%= notice %></p>

<h1>Claims</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Picked up</th>
      <th>Active</th>
      <th>Surplu</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.quantity %></td>
        <td><%= claim.picked_up %></td>
        <td><%= claim.active %></td>
        <td><%= claim.surplu.resource %></td>
        <td><%= claim.organization.name %></td>
        <td><%= link_to 'Show', surplu_claim_path(@surplus, claim) %></td>
        <td><%= link_to 'Edit', edit_surplu_claim_path(@surplus, claim) %></td>
        <td><%= link_to 'Destroy', [@surplus, claim], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Claim', new_surplu_claim_path(@surplus) %>
